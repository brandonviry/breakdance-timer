    %%SELECTOR%% .timer-value {
        font-size: calc({{design.globall.font.custom.customTypography.fontSize.number }}{{design.globall.font.custom.customTypography.fontSize.unit }} * 0.6);
        font-weight: {{design.globall.font.custom.customTypography.fontWeight}};
    }
    
    %%SELECTOR%% .timer-label {
        font-size: calc({{design.globall.font.custom.customTypography.fontSize.number }}{{design.globall.font.custom.customTypography.fontSize.unit }} / 4);
        margin-top: 2px;
        font-weight: 600;
        text-transform: uppercase;
